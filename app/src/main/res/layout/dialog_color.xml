<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="6dp"
              android:paddingEnd="16dp"
              android:gravity="center_horizontal"
              android:paddingStart="16dp"
              android:paddingTop="6dp">

    <LinearLayout
        android:id="@+id/ll_contentColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_color_dialog"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp">

        <View
            android:id="@+id/v_contentColor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/btn_color_dialog_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="正文颜色"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_startColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp">

        <View
            android:id="@+id/v_startColor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/btn_color_dialog_bg"/>

        <TextView
            android:id="@+id/tv_startColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="倒计时颜色"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_endColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:alpha="0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp">

        <View
            android:id="@+id/v_endColor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/btn_color_dialog_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="倒计时末段颜色"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="是否使用渐变色："
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
        <Switch
            android:id="@+id/s_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.bulingzhuang.deadline.views.ui.ColorRadioGroup
        android:id="@+id/crg_color"
        android:layout_width="250dp"
        android:layout_marginTop="6dp"
        android:layout_height="250dp"/>
</LinearLayout>