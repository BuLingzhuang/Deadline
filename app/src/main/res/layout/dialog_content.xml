<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        android:paddingStart="16dp">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="内容"
            android:inputType="text"
            android:maxLength="33"
            android:maxLines="3"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimaryAlpha"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/btn_color"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_color_lens_black_alpha_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型："
            android:textColor="@color/colorPrimaryAlphaDark"
            android:textSize="15sp"/>

        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:entries="@array/content_types"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="1dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："
            android:textColor="@color/colorPrimaryAlphaDark"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_content_dialog"
            android:hint="选择日期"
            android:paddingBottom="5dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="15sp"/>

        <Spinner
            android:id="@+id/sp_startHour"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:entries="@array/content_hour"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="1dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："
            android:textColor="@color/colorPrimaryAlphaDark"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_content_dialog"
            android:hint="选择日期"
            android:paddingBottom="5dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="15sp"/>

        <Spinner
            android:id="@+id/sp_endHour"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:entries="@array/content_hour"/>

    </LinearLayout>
</LinearLayout>